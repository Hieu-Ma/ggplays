extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Login
      a(href='/' class='btn btn-warning ml-2') Cancel
  form(action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    input(type='hidden' name='email' value='demo@gmail.com')
    input(type='hidden' name='password' value='123')
    button(type='submit' class='btn btn-primary') Demo Login
  div
    p: a(href='/users/sign-up') Don't have an account?
