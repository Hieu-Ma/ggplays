extends layout.pug

include utils.pug

append head 
  link(rel="stylesheet" href="/stylesheets/login.css")

block content
  div(id="login-container")
    div(class="form" id="form-container")
      div(id="errors-container")
        +validationErrorSummary(errors)
      form(id="login-form" action='/users/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', email)
        +field('Password', 'password', null, 'password')
        div(class='login-cancel')
          button(type='submit' class='login-button') Login
          button(type='button' class='login-button')
            a(id="cancel-login-button" href='/') Cancel
      form(class="buttons" action='/users/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type='hidden' name='email' value='demo@gmail.com')
        input(type='hidden' name='password' value='123')
        button(type='submit' class='login-button') Demo Login
      div
        p: a(href='/users/sign-up') Don't have an account?

      //- form(class="buttons" method="get" action="/")
      //-   button(type='submit' class='login-button') Cancel
