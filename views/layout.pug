          a(class='navbar-link' href='/users/profile') Profile
          form(class='form-inline pr-4' action='/users/logout' method='post')
            button(class='btn btn-sm btn-warning' type='submit') Logout
        else
          span(class='navbar-button')
            a(class='navbar-link' href='/users/login') Login
            a(class='navbar-link' href='/users/sign-up') Register
