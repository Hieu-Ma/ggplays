            ul
                each shelf in shelves
                    li
                    a(href=`/gameshelves/${shelf.id}`)= shelf.title
        div(class="games-container")
            each game in gameshelf.Games
                div(class="games-container" id="title-description")
                    div(class="games-container" id="game")
                        div(id="game-img")
                            h3 Games:
                            img(id="image-id" src=game.image_url)
                            h3=`${game.name}`
                div(class="games-container" id="description")
                    div(class="games-container" id="game-description")
